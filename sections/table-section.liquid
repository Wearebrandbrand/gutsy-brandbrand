{{- 'sections--table-section.css' | asset_url | stylesheet_tag -}}

<div class="table-section">
  <div class="row">
    <div class="small-12 columns">
      <div class="table-section-header table-header">
        <div class="table-section-header-box">
          {% if section.settings.sub_heading %}
            <p class="subheading">{{ section.settings.sub_heading }}</p>
          {% endif %}
          {% if section.settings.heading %}
            <h3 class="h2 ">{{ section.settings.heading }}</h3>
          {% endif %}
          {% if section.settings.description %}
            <div class="rte">
              {{ section.settings.description }}
            </div>
          {% endif %}
        </div>
        <div class="table-section-img-box">
          <div class="img-container">
            {%- if section.settings.image != blank -%}
              {% assign image = section.settings.image %}
              {% assign master_width = image.src.width | append: 'x' | append: image.src.height %}
              {%- render 'responsive-image', image: image, sizes: master_width, retina: true -%}
            {%- else -%}
              {{ 'image' | placeholder_svg_tag: 'placeholder_svg_tag' }}
            {%- endif -%}
          </div>
          <div class="img-container">
            {%- if section.settings.image_2 != blank -%}
              {% assign image = section.settings.image_2 %}
              {% assign master_width = image.src.width | append: 'x' | append: image.src.height %}
              {%- render 'responsive-image', image: image, sizes: master_width, retina: true -%}
            {%- else -%}
              {{ 'image' | placeholder_svg_tag: 'placeholder_svg_tag' }}
            {%- endif -%}
          </div>
        </div>
      </div>

      <div class="table-section-body">
        
        {% for block in section.blocks %}
          <div class="table-section-body-item table-section-header">
            {% if block.settings.text %}
              <div class="table-item-text table-section-header-box">
                <h5>{{ block.settings.text }}</h5>
              </div>
            {% endif %}
            <div class="table-section-img-box">
              <div class="table-item-other-brand img-container">
                
                {% if block.settings.other_brand %}
                  <svg width="34" height="35" viewBox="0 0 34 35" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M1 17.4897C1 8.65319 8.16344 1.48975 17 1.48975C25.8366 1.48975 33 8.65319 33 17.4897C33 26.3263 25.8366 33.4897 17 33.4897C8.16344 33.4897 1 26.3263 1 17.4897Z" fill="#1A3C32"/>
