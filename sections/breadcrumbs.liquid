				    <svg xmlns="http://www.w3.org/2000/svg" width="10" height="15" viewBox="0 0 10 15" fill="none">
					    <path fill-rule="evenodd" clip-rule="evenodd" d="M0.531381 14.8076C0.0829819 14.5487 -0.0706511 13.9754 0.188232 13.527L7.68823 0.536589C7.94712 0.0881882 8.52048 -0.065443 8.96888 0.19344C9.41728 0.452324 9.57091 1.02569 9.31203 1.47409L1.81203 14.4645C1.55315 14.9129 0.979781 15.0665 0.531381 14.8076Z" fill="#3D3F43"/>
				    </svg>
			    </i>
			    {{ 'sections.breadcrumbs.search' | t }}
			  {% endif %}
				{% if template contains 'customers' %}
			    <i>
				    <svg xmlns="http://www.w3.org/2000/svg" width="10" height="15" viewBox="0 0 10 15" fill="none">
					    <path fill-rule="evenodd" clip-rule="evenodd" d="M0.531381 14.8076C0.0829819 14.5487 -0.0706511 13.9754 0.188232 13.527L7.68823 0.536589C7.94712 0.0881882 8.52048 -0.065443 8.96888 0.19344C9.41728 0.452324 9.57091 1.02569 9.31203 1.47409L1.81203 14.4645C1.55315 14.9129 0.979781 15.0665 0.531381 14.8076Z" fill="#3D3F43"/>
				    </svg>
			    </i>
			    {{ 'sections.breadcrumbs.my_account' | t }}
			  {% endif %}
