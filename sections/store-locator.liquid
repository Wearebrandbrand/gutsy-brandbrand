              "value": "h2",
              "label": "Small"
            },
            {
              "value": "h1",
              "label": "Medium"
            },
            {
              "value": "h1-large",
              "label": "Large"
            },
            {
              "value": "h1-xlarge",
              "label": "Extra large"
            }
          ],
          "default": "h1-xlarge"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Store Locator"
    }
  ]
}
{%- endschema -%}
