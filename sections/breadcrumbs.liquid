						</svg>
					</i>
					<a href="{{ routes.all_products_collection_url }}" title="{{ 'sections.breadcrumbs.shop' | t | escape }}">{{ 'sections.breadcrumbs.shop' | t }}</a>
			    <i>
				    <svg xmlns="http://www.w3.org/2000/svg" width="10" height="15" viewBox="0 0 10 15" fill="none">
					    <path fill-rule="evenodd" clip-rule="evenodd" d="M0.531381 14.8076C0.0829819 14.5487 -0.0706511 13.9754 0.188232 13.527L7.68823 0.536589C7.94712 0.0881882 8.52048 -0.065443 8.96888 0.19344C9.41728 0.452324 9.57091 1.02569 9.31203 1.47409L1.81203 14.4645C1.55315 14.9129 0.979781 15.0665 0.531381 14.8076Z" fill="#3D3F43"/>
				    </svg>
			    </i>
			    <a href="{{ collection.url }}" title="{{ collection.title | escape }}">{{ collection.title }}</a>
			  {% endif %}
				{% if template contains 'list-collections' %}
					<i>
						<svg xmlns="http://www.w3.org/2000/svg" width="10" height="15" viewBox="0 0 10 15" fill="none">
							<path fill-rule="evenodd" clip-rule="evenodd" d="M0.531381 14.8076C0.0829819 14.5487 -0.0706511 13.9754 0.188232 13.527L7.68823 0.536589C7.94712 0.0881882 8.52048 -0.065443 8.96888 0.19344C9.41728 0.452324 9.57091 1.02569 9.31203 1.47409L1.81203 14.4645C1.55315 14.9129 0.979781 15.0665 0.531381 14.8076Z" fill="#3D3F43"/>
						</svg>
					</i>
					<a href="{{ routes.all_products_collection_url }}" title="{{ 'sections.breadcrumbs.shop' | t | escape }}">{{ 'sections.breadcrumbs.shop' | t }}</a>
					<i>
						<svg xmlns="http://www.w3.org/2000/svg" width="10" height="15" viewBox="0 0 10 15" fill="none">
							<path fill-rule="evenodd" clip-rule="evenodd" d="M0.531381 14.8076C0.0829819 14.5487 -0.0706511 13.9754 0.188232 13.527L7.68823 0.536589C7.94712 0.0881882 8.52048 -0.065443 8.96888 0.19344C9.41728 0.452324 9.57091 1.02569 9.31203 1.47409L1.81203 14.4645C1.55315 14.9129 0.979781 15.0665 0.531381 14.8076Z" fill="#3D3F43"/>
						</svg>
					</i>
			    {{ 'sections.breadcrumbs.collections' | t }}
			  {% endif %}
				{% if template contains 'cart' %}
			    <i>
				    <svg xmlns="http://www.w3.org/2000/svg" width="10" height="15" viewBox="0 0 10 15" fill="none">
					    <path fill-rule="evenodd" clip-rule="evenodd" d="M0.531381 14.8076C0.0829819 14.5487 -0.0706511 13.9754 0.188232 13.527L7.68823 0.536589C7.94712 0.0881882 8.52048 -0.065443 8.96888 0.19344C9.41728 0.452324 9.57091 1.02569 9.31203 1.47409L1.81203 14.4645C1.55315 14.9129 0.979781 15.0665 0.531381 14.8076Z" fill="#3D3F43"/>
				    </svg>
			    </i>
			    {{ 'sections.breadcrumbs.cart' | t }}
			  {% endif %}
			  {% if template contains 'product' %}
			    <i>
				    <svg xmlns="http://www.w3.org/2000/svg" width="10" height="15" viewBox="0 0 10 15" fill="none">
					    <path fill-rule="evenodd" clip-rule="evenodd" d="M0.531381 14.8076C0.0829819 14.5487 -0.0706511 13.9754 0.188232 13.527L7.68823 0.536589C7.94712 0.0881882 8.52048 -0.065443 8.96888 0.19344C9.41728 0.452324 9.57091 1.02569 9.31203 1.47409L1.81203 14.4645C1.55315 14.9129 0.979781 15.0665 0.531381 14.8076Z" fill="#3D3F43"/>
				    </svg>
			    </i>
			    {{ product.title }}
			  {% endif %}
			  {% if template contains 'blog' %}
					{% if current_tags %}
						<i>
							<svg xmlns="http://www.w3.org/2000/svg" width="10" height="15" viewBox="0 0 10 15" fill="none">
								<path fill-rule="evenodd" clip-rule="evenodd" d="M0.531381 14.8076C0.0829819 14.5487 -0.0706511 13.9754 0.188232 13.527L7.68823 0.536589C7.94712 0.0881882 8.52048 -0.065443 8.96888 0.19344C9.41728 0.452324 9.57091 1.02569 9.31203 1.47409L1.81203 14.4645C1.55315 14.9129 0.979781 15.0665 0.531381 14.8076Z" fill="#3D3F43"/>
							</svg>
						</i>
				    <a href="{{ blog.url }}" title="{{ blog.title | escape }}">{{ blog.title }}</a>
						<i>
							<svg xmlns="http://www.w3.org/2000/svg" width="10" height="15" viewBox="0 0 10 15" fill="none">
								<path fill-rule="evenodd" clip-rule="evenodd" d="M0.531381 14.8076C0.0829819 14.5487 -0.0706511 13.9754 0.188232 13.527L7.68823 0.536589C7.94712 0.0881882 8.52048 -0.065443 8.96888 0.19344C9.41728 0.452324 9.57091 1.02569 9.31203 1.47409L1.81203 14.4645C1.55315 14.9129 0.979781 15.0665 0.531381 14.8076Z" fill="#3D3F43"/>
							</svg>
						</i>
						{{ current_tags }}
					{% else %}
						<i>
							<svg xmlns="http://www.w3.org/2000/svg" width="10" height="15" viewBox="0 0 10 15" fill="none">
								<path fill-rule="evenodd" clip-rule="evenodd" d="M0.531381 14.8076C0.0829819 14.5487 -0.0706511 13.9754 0.188232 13.527L7.68823 0.536589C7.94712 0.0881882 8.52048 -0.065443 8.96888 0.19344C9.41728 0.452324 9.57091 1.02569 9.31203 1.47409L1.81203 14.4645C1.55315 14.9129 0.979781 15.0665 0.531381 14.8076Z" fill="#3D3F43"/>
							</svg>
						</i>
						{{ blog.title }}
					{% endif %}
			  {% endif %}
				{% if template contains 'article' %}
			    <i>
				    <svg xmlns="http://www.w3.org/2000/svg" width="10" height="15" viewBox="0 0 10 15" fill="none">
					    <path fill-rule="evenodd" clip-rule="evenodd" d="M0.531381 14.8076C0.0829819 14.5487 -0.0706511 13.9754 0.188232 13.527L7.68823 0.536589C7.94712 0.0881882 8.52048 -0.065443 8.96888 0.19344C9.41728 0.452324 9.57091 1.02569 9.31203 1.47409L1.81203 14.4645C1.55315 14.9129 0.979781 15.0665 0.531381 14.8076Z" fill="#3D3F43"/>
				    </svg>
			    </i>
			    <a href="{{ blog.url }}" title="{{ blog.title | escape }}">{{ blog.title }}</a>
			    <i>
				    <svg xmlns="http://www.w3.org/2000/svg" width="10" height="15" viewBox="0 0 10 15" fill="none">
					    <path fill-rule="evenodd" clip-rule="evenodd" d="M0.531381 14.8076C0.0829819 14.5487 -0.0706511 13.9754 0.188232 13.527L7.68823 0.536589C7.94712 0.0881882 8.52048 -0.065443 8.96888 0.19344C9.41728 0.452324 9.57091 1.02569 9.31203 1.47409L1.81203 14.4645C1.55315 14.9129 0.979781 15.0665 0.531381 14.8076Z" fill="#3D3F43"/>
				    </svg>
			    </i>
			    {{ article.title }}
			  {% endif %}
			  {% if template contains 'page' %}
			    <i>
				    <svg xmlns="http://www.w3.org/2000/svg" width="10" height="15" viewBox="0 0 10 15" fill="none">
					    <path fill-rule="evenodd" clip-rule="evenodd" d="M0.531381 14.8076C0.0829819 14.5487 -0.0706511 13.9754 0.188232 13.527L7.68823 0.536589C7.94712 0.0881882 8.52048 -0.065443 8.96888 0.19344C9.41728 0.452324 9.57091 1.02569 9.31203 1.47409L1.81203 14.4645C1.55315 14.9129 0.979781 15.0665 0.531381 14.8076Z" fill="#3D3F43"/>
				    </svg>
			    </i>
			    {{ page.title }}
			  {% endif %}
				{% if template contains 'search' %}
