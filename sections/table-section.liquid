                  </svg>
                {% else %}
                  <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" clip-rule="evenodd" d="M1.09538 0.584942C1.55564 0.124681 2.30187 0.124681 2.76213 0.584942L9.24262 7.06544L15.7231 0.584942C16.1834 0.124681 16.9296 0.124681 17.3899 0.584942C17.8501 1.0452 17.8501 1.79143 17.3899 2.25169L10.9094 8.73219L17.39 15.2128C17.8503 15.6731 17.8503 16.4193 17.39 16.8796C16.9297 17.3398 16.1835 17.3398 15.7232 16.8796L9.24262 10.3989L2.76201 16.8796C2.30175 17.3398 1.55552 17.3398 1.09526 16.8796C0.634996 16.4193 0.634996 15.6731 1.09526 15.2128L7.57587 8.73219L1.09538 2.25169C0.635115 1.79143 0.635115 1.0452 1.09538 0.584942Z" fill="#1A3C32"/>
                  </svg>
                {% endif %}
              </div>
            </div>
          </div>
        {% endfor %}
        
      </div>
  
      <div class="section-header--button">
				{% render 'text-button', url: section.settings.button_url, title: section.settings.button_text %}
			</div>

    </div>
  </div>
</div>

{% schema %}
{
  "name": "Table Section",
  "class": "section-table",
  "settings": [
    {
      "type": "header",
      "content": "Heading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Title",
      "default": "Gutsy Voeding"
    },
    {
      "type": "text",
      "id": "sub_heading",
      "label": "Sub Heading",
      "default": "Supermarkt voer VS."
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Content",
      "default": "<p>Lorem ipsum dolor sit amet consectetur. Eu gravida feugiat nunc a non.</p>"
    },
    {
      "type": "header",
      "content": "Table Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Table Image 1",
      "info": "240 x 220 .jpg recommended."
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Table Image 2",
      "info": "240 x 220 .jpg recommended."
    },
    {
      "type": "header",
      "content": "Button Text"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Probeer het nu"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    }
  ],
  "blocks": [
    {
      "type": "table_content",
      "name": "Points",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Lorem ipsum dolor sit amet consectetur."
        },
        {
          "type": "checkbox",
          "id": "other_brand",
          "label": "Other Brand",
          "default": false
        },
        {
          "type": "checkbox",
          "id": "gutys_brand",
          "label": "Gutys Brand",
          "default": true
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Table Section"
    }
  ]
}
{% endschema %}
