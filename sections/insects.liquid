<script type="text/javascript">
  const sectionScrollTop = document.querySelector('.insects-section').offsetTop;

  if(window.scrollY >= sectionScrollTop - 200) {
    animateGraph();
  }


  window.addEventListener('scroll', () => {
    if (window.scrollY >= sectionScrollTop - 200) {
      animateGraph();
    }
  })

  function animateGraph() {
    const bars = document.querySelectorAll('.insects-graph__bar');

    const base = 350;
    const max = 200;
    const time = 4000;
    const interval = 100;

    bars.forEach((bar, i) => {
      const height = bar.getAttribute('data-value');

      bar.querySelector('.insects-graph__bar-color').style.height = base / max * height + 'px';

      const span = bar.querySelector('span')

      let increment = Math.ceil(parseInt(height)/(time/interval));
      if (parseInt(height) < 20) {
        increment = .5;
      }

      setInterval(function () {
        let current = span.innerHTML;

        if (parseFloat(height) > parseFloat(current)) {
          if (increment === 0.5) {
            span.innerHTML = (parseFloat(current) + increment).toFixed(1);
          } else {
            span.innerHTML = parseFloat(current) + increment;
          }
        } else {
          span.innerHTML = height;
        }
      }, interval * 2);

    });

  }

</script>

